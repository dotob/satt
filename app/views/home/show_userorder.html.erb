

<% order_items = OrderItem.find_all_by_user_order_id(@current_user_order.id)%>
<table class="table table-striped table-bordered">
	<tr>
	<th>Nummer</th>	
    <th>Gericht</th>
    <th>Preis</th>
    <th>Sonderwunsch</th>
    <th></th>
  </tr>
	<% order_items.each do |orderitem| %>
	  <tr>
	  	<td><%= orderitem.menu_item.order_number %></td>
	    <td><%= orderitem.menu_item.name %></td>
	    <td><%= orderitem.menu_item.price.to_s + " €" %></td>
	    <%= form_tag ('/add_specialwishes') do %>
	     <%= hidden_field_tag "orderitem_id", orderitem.id %>
	     <%= hidden_field_tag "master_order_id", @master_order.id %>
	    <td><%= text_field_tag 'specialwishes', orderitem.special_wishes %> <%= submit_tag('save', :class => "btn btn-inverse")%></td>
	    <% end %>
	    <%= form_tag ('/remove_orderitem') do %>
	     <%= hidden_field_tag "orderitem_id" , orderitem.id %>
	     <%= hidden_field_tag "master_order_id", @master_order.id %>
	    <td>
	    	<%= submit_tag('X', :class => "btn btn-danger")%>
	    </td>
	    <%end%>
	  </tr>
	<% end %>
	<tr>
		 <td><strong> Gesamtpreis: </strong></td>
		 <% useroder_price = OrderItem.get_price_of_all_items_of_one_userorder(@current_user_order.id) %>
		 <td><strong><%= useroder_price.to_s + " €" %></strong></td> 
		 <td></td>
		 <td></td>
		 <td></td>
	</tr>	
</table>

<div class="span4 offset4">
	<%= form_tag("/show_user_order") do %>
	  <%= label_tag(:searchpattern, "Search for:") %>
	  <%= text_field_tag(:searchpattern) %>
	  <%= hidden_field_tag "master_order_id", @master_order.id %>
	  <%= submit_tag("Search", :class => "btn btn-primary") %>
	<% end %>
</div>

<% menu_items = MenuItem.all_menu_items_by_menu_id(@master_order.menu.id, params[:searchpattern]) %>
<table class="table table-striped table-bordered">
	<tr>
	<th>Nummer</th>	
    <th>Gericht</th>
    <th>Beschreibung</th>
    <th>Preis</th>
    <th></th>
   
  </tr>
	<% menu_items.each do |item| %>
	  <tr>
	  	<td><%= item.order_number.to_s %></td>
	    <td><%= item.name %></td>
	    <td><%= item.description %></td>
	    <td><%= item.price.to_s + " €" %></td>
	     <%= form_tag ('/add_orderitem') do %>
	     <%= hidden_field_tag "menu_item_id" , item.id %>
	     <%= hidden_field_tag "master_order_id", @master_order.id %>
	    <td>
	    	<%= submit_tag('+', :class => "btn btn-success")%>
	    </td>
	    <%end%>
	  </tr>
	<% end %>
</table>


